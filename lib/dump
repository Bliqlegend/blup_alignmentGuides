if (((text1Left + 'Hello'.length) - (text2Left + 'Mellow'.length)).abs() <= 5 && (text1top-text2top).abs() <=3*30) {
                    positionedGuidelines.clear();
                    positionedGuidelines.add(
                      Positioned(
                        left: text1Left + 'Hello'.length,
                        top: text1top,
                        child: Container(
                          height: (text2top - text1top).abs() + 1.1 * 30,
                          width: 2,
